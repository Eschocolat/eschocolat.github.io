$font-family-body = "NanumSquare", "Nanum Gothic", "Apple SD Gothic Neo", "Malgun Gothic", sans-serif
$font-family-mono = "D2Coding","NanumGothicCoding",Consolas,"Spoqa Han Sans","Liberation Mono",Menlo,Courier,monospace
$font-family-head = "NanumBarunpen", "Nanum Gothic", "Apple SD Gothic Neo", "Malgun Gothic", sans-serif
//$font-family-mono = "D2Coding","NanumGothicCoding",Consolas,"Spoqa Han Sans","Liberation Mono",Menlo,Courier,monospace
$font-size = 16px
$line-height = 1.7
$ul-line-height = 1.8
$page-width = 0rem + (hexo-config("page_width") || 39)
// Logo
$logo-width = 0px + (hexo-config("logo.width") || 0)
$logo-height = 0px + (hexo-config("logo.height") || 0)
// Colors
$colors = hexo-config("colorscheme") || "dark"
