@import "_variables"
@import "_colors/" + $colors
@import "_util"
@import "_mixins"
@import "_extend"
@import "_fonts"

global-reset()

*, *:before, *:after
  box-sizing: border-box

html
  height: 100%
  font-size: 18px
  -webkit-text-size-adjust: 100%
  -ms-text-size-adjust: 100%

body
  margin: 0
  height: 100%
  display: -webkit-box
  display: -ms-flexbox
  display: flex
  -webkit-box-orient: vertical
  -ms-flex-direction: column
  flex-direction: column
  //border: 2px solid $color-text
  //background-color: #1a1a1a;
  background-color: $color-body-background
  color: $color-text
  font-weight: 400
  font-size: $font-size
  font-family: $font-family-body
  // line-height: $line-height
  text-rendering: geometricPrecision

  antialias()

  @media (min-width: 480px)
    &:before//, &:after
      background: $color-text
      content: ""
      display: block
      height: $page-border-width
      left: 0
      position: fixed
      width: 100%
      z-index: 99
    //&:after
    //  bottom: 0

.page
  -webkit-box-flex: 1
  -ms-flex: 1
  flex: 1
  background-color: $color-background
  @media (min-width: 480px)
    margin: $page-border-width 0 0

.content-wrapper
  //display: flex
  //flex-direction: column

.content
  @extend $base-style

  .ca-year
  .index-year
    margin-top: 1rem
  .ar-category-title
    &:before
      float: left
      padding-right: .25rem
      content: "-"
    a:hover
      underline(5px, $color-accent-2)

  p
    hyphens(auto)
    margin: 1rem 0 2rem

  code
    hyphens(manual)

  a
    color: $color-text
    text-decoration: none

    underline(5px, $color-text)

    &:hover
      background-image: linear-gradient(transparent, transparent 4px, $color-link 4px, $color-link)

  a.icon
    background: none

    &:hover
      color: $color-link

  h1 a, .h1 a, h2 a, h3 a, h4 a, h5 a, h6 a
    background: none
    color: inherit
    text-decoration: none

  h1 a:hover, .h1 a:hover, h2 a:hover, h3 a:hover, h4 a:hover, h5 a:hover, h6 a:hover
    underline(6px, $color-link)

  h6 a
    background: none
    color: inherit
    text-decoration: none

  h6 a:hover
    underline(6px, $color-link)

@media (min-width: 540px)
  .image-wrap
    -webkit-box-orient: horizontal
    -ms-flex-direction: row
    flex-direction: row
    margin-bottom: 2rem

    .image-block
      -webkit-box-flex: 1
      -ms-flex: 1 0 35%
      flex: 1 0 35%
      margin-right: 2rem

    p
      -webkit-box-flex: 1
      -ms-flex: 1 0 65%
      flex: 1 0 65%

.max-width
  max-width: $page-width

@media (max-width: 480px)
  // smaller margins at smaller screen widths
  .px3
    padding-right: 1rem
    padding-left: 1rem

  .my4
    margin-top: 2rem
    margin-bottom: 2rem

@media (min-width: 480px)
  p
    text-align: justify

@import "_partial/header"
@import "_partial/post/actions_desktop"
@import "_partial/post/actions_mobile"
@import "_partial/index"
@import "_partial/article"
@import "_partial/archive"
@import "_partial/comments"
@import "_partial/footer"
@import "_partial/pagination"
@import "_partial/search"
// Code
@import "_highlight/" + $highlight

pre
  overflow-x: auto
  padding: 10px 15px
  padding-bottom: 0
  border: 1px dotted $color-border
  border-radius: 4px
  font-size: 16px
  font-family: $font-family-mono
  line-height: 22px
  -webkit-border-radius: 4px

  code
    display: block
    padding: 0
    border: none

code
  background: #efecf4
  padding: 3px 4px;
  margin: 0 2px;
  // padding: 0 5px
  // border: 1px dotted $color-border
  // border-radius: 2px
  // -webkit-border-radius: 2px

.highlight
  overflow-x: auto
  margin: 1rem 0
  padding: 10px 15px
  border-radius: 4px
  // background: $color-background-code
  font-family: $font-family-mono
  // color: $color-accent-3
  -webkit-border-radius: 4px

  figcaption
    margin: -5px 0 5px
    color: $color-meta-code
    font-size: .9em
    zoom: 1

    a
      float: right
      color: $color-meta-code
      font-style: italic
      font-size: .8em

      underline(10px, $color-link)

    a:hover
      color: lighten($color-meta-code, 20%)

    &:before, content: ""
      display: table

    &:after
      clear: both

  pre
    padding: 0
    border: none
    background: none
    overflow-y: hidden

  table
    width: auto

  td.gutter
    text-align: right

  .line
    height: 22px

.tag-h1
  a
    text-decoration: none
    background: none
    font-size: 16px
    font-weight: bold
    color: $color-accent-2

.related-posts 
  border-top: 1px solid #ecece0
  text-align: center
  overflow: hidden
  width: 100%
  max-width: 72rem
  box-sizing: border-box
  & h3 
    margin: 1.4rem 0
  @media (min-width: 700px)
    padding: 0 0.5rem
    margin: 4rem auto 2rem

.related-posts__item__wrapper
  box-sizing: border-box
  margin-top: 1rem
  @media (min-width: 700px)
    display: -webkit-box
    display: -ms-flexbox
    display: flex

.related-posts__item 
  position: relative
  display: block
  width: 100%
  height: 10rem
  overflow: hidden
  padding: 0 0.5rem
  background: #ddd
  @media (min-width: 700px)
    height: 10rem
    &:not(:first-child)
      margin-left: .2rem
    &:not(:last-child)
      margin-right: .2rem
  &:hover 
    & .related-posts__item__background 
      transform: scale(1.2)

.related-posts__item__background 
  display: block
  background-size: cover
  background-position: 50% 50%
  background-repeat: no-repeat
  position: absolute
  top: 0
  right: 0
  left: 0
  bottom: 0
  transition: transform 0.3s ease

.related-posts__item__overlay
  background-color: rgba(0, 0, 0, 0.4)
  position: absolute
  top: 0
  right: 0
  left: 0
  bottom: 0

.related-posts__item__title 
  font-size: 1rem
  line-height: 1.5em
  font-weight: bold
  color: #fff
  padding: 0 1rem
  position: absolute
  top: 50%
  right: 0
  left: 0
  transform: translateY(-50%)

a.icon.social-ic
  margin-right: 20px
  i
    font-size: 1.25rem

ul.category-list
  margin: 0
  padding: 0
  list-style: none
  a
    font-size: .8rem
    font-weight: 700
    color: $color-accent-2
    background: none
    &:hover
      underline(5px, $color-accent-2)
      // background-position: bottom
      // background-size: 100% 6px
      // background-repeat: repeat-x
  li.category-list-item
    overflow: hidden
    width: 100%
  .category-list-count
    font-size: .65rem
    padding-left: .5em
  .category-list-count:before 
    content: "("
  .category-list-count:after 
    content: ")"
  li:before
    float: left
    padding-right: .25rem
    content: "-"

article .content .eschocolat-profile > img
  border-radius: 50%
  max-width: 140px