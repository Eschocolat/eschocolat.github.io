<section id="about">
  <% if (config.description) { %>
    <%- markdown(config.description) %>
  <% } %>
  <% if (theme.social_links) { %>
    <p>
      <%= __('index.find_me_on') %>
      <% var nb_links = Object.keys(theme.social_links).length %>
      <% var i = 0 %>
      <% for(var link in theme.social_links) { %>
        <% if (link == 'mail') { %>
          <a class="icon social-ic" target="_blank" href="<%- url_for(theme.social_links[link]) %>">
            <i class="fas fa-envelope"></i><!--
      ---></a><!--
      ---><% } else if (link == 'rss') { %>
          <a class="icon social-ic" target="_blank" href="<%- url_for(theme.social_links[link]) %>">
            <i class="fas fa-rss-square"></i><!--
      ---></a><!--
      ---><% } else { %>
          <a class="icon social-ic" target="_blank" href="<%- url_for(theme.social_links[link]) %>">
            <i class="fab fa-<%= link %>"></i><!--
      ---></a><!--
    ---><% } %><!--
    ---><%= ( nb_links > 0 && i < nb_links-1 ? 
            ( i == nb_links-2 ? ' '+__('index.enum_and')+' ' 
            : __('index.enum_comma')+' ' ) 
            : '' ) %>
        <% i+=1 %>
      <% } %>
    </p>
  <% } %>
</section>
<section id="list_categories">
  <span class="h1"><%= __('index.categories') %></span>
<%- list_categories() %>
</section>
<section id="writing">
  <span class="h1"><a href="<%- url_for(theme.archive_url) %>"><%= __('index.articles') %></a></span>
  <div id="archive">
  <ul class="post-list">
    <% var year = 0 %>
    <% var change = false %>
    <% page.posts.sort('date', 'desc').each(function(post) { %>
    <!--
      <% var itemYear = date(post.date, 'YYYY') - 0 %>
      <% change = year !== itemYear %>
      <% year = change ? itemYear : year %>
      <% if (change) { %>
        <h2 class="index-year"><%= year %></h2>
      <% } %>
      -->
      <%- partial('_partial/archive-post', { post: post, showCategory: true }) %>
    <% }); %>
  </ul>
  <%- partial('_partial/pagination') %>
</div>
</section>

<% if (site.data.projects) { %>
<section id="projects">
  <span class="h1"><a href="<%- url_for(theme.projects_url) %>"><%= __('index.projects') %></a></span>
  <ul class="project-list">
    <% for(var obj in site.data.projects){ %>
      <li class="project-item">
        <a href="<%= site.data.projects[obj].url %>"><%= site.data.projects[obj].name %></a>: <%= site.data.projects[obj].desc %>
      </li>
    <% } %>
  </ul>
</section>
<% } %>
